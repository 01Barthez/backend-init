    "@types/figlet": "^1.7.0",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "jest": "^30.1.1",
    "prisma": "^5.0.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
