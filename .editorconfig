# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 100

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.mdx]
trim_trailing_whitespace = false
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
max_line_length = 100

[*.json]
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2
insert_final_newline = true

[.env]
end_of_line = lf
insert_final_newline = true

[Dockerfile]
indent_style = space
indent_size = 2

[*.log]
insert_final_newline = false
trim_trailing_whitespace = false
